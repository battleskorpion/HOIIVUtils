<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/${javafx.version}" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hoi4utils.ui.LogViewerController">
  <center>
    <TextArea fx:id="consoleOutput" editable="false" wrapText="true"
              style="-fx-font-family: 'monospace';" BorderPane.alignment="CENTER" />
  </center>
  <bottom>
    <HBox spacing="10" alignment="CENTER_RIGHT">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
      </padding>
      <Button text="Clear Console" onAction="#clearConsole" />
      <Button text="Save to File" onAction="#saveToFile" />
    </HBox>
  </bottom>
</BorderPane>
